<UserControl x:Class="PhotoSearch.DisplayPhotos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Button Name="BackButton" Command="{Binding BackNavigationCommand}" Margin="30 0 500 0" >Back</Button>
            <TextBox Name="searchText" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="120 0 300 0"></TextBox>
            <Button Name="SearchButton" Command="{Binding SearchCommand}" Margin="350 0 200 0" >Search</Button>
        </Grid>
        <Grid Grid.Row="1" Margin="0 50 0 0">
            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" Width="auto">
                <WrapPanel Name="disp" Width="500" Height="320" ItemHeight="50">
               
                </WrapPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
